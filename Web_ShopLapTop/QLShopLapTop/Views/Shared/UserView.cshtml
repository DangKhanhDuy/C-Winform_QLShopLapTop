                    <li class="nav-item nav-link">
                        @Html.ActionLink("TRANG CHỦ", "", "", null, new { style = "color: black; font-weight: bold; font-size: 20px" })
                    </li>
                    <li class="nav-item nav-link" style="text-decoration-color: green">
                        @*<a href="#">Đăng Ký</a>*@
                        @Html.ActionLink("ĐĂNG KÝ", "DangKy", "NguoiDung", null, new { style = "color: black; font-weight: bold; font-size: 20px" })
                    </li>
                    <li class="nav-item nav-link">
                        @*<a href="#">Đăng Nhập</a>*@
                        @Html.ActionLink("ĐĂNG NHẬP", "DangNhap", "NguoiDung", null, new { style = "color: black; font-weight: bold; font-size: 20px" })
                    </li>
                    <li class="nav-item nav-link">
                        @*<a href="#">Liên Hệ</a>*@
                        @Html.ActionLink("LIÊN HỆ", "LienHe", "Paper", null, new { style = "color: black; font-weight: bold; font-size: 20px" })
                    </li>
