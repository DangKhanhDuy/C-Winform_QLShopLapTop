                            DANH MỤC
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" >
                            <li><a class="dropdown-item" href="@Url.Action("ShowSanPham", "SanPham")"><img src="/Images/logo.png"  width="50px" height="30px"/>LapTop</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("SanPhamTheoNCC", "SanPham")"><img src="/Images/ncc.png" width="50px" height="30px" />Hãng</a></li>
                        </ul>
                    </li>
                </ul>
                <input class="form-control" style=" width:200px; margin-left: 20px" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-link" type="submit"><img src="/Images/search.JPG" /></button>

                <ul style=" margin: 0px auto; padding-bottom: 13px; padding-left: 0px">
                    <li class="nav-item nav-link">
                        @Html.Action("ShowGioHang", "GioHang")
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a>
                            @if (Session["SDT"] != null)
                            {
                                var khachHang = (QLShopLapTop.Models.KHACHHANG)Session["SDT"];
                                string tenKhachHang = khachHang.TenKH;

                                <div>
                                    Xin chào 
                                    <p>@tenKhachHang!</p>
                                </div>
                            }
                            @if (Session["SDT"] != null)
                            {
                                <a href="@Url.Action("DangXuat", "NguoiDung")">Đăng Xuất</a>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="none-mg" style="background-color:darkorange; text-align:center; display: flex; flex-wrap: wrap; margin-right: 0px; margin-left: 0px;">
            <div class="col " style="background-color: lavender; margin: 0 auto; width: 80  %">
                <div class="row">
                    <div class="col">
                        <div id="carouselExampleControls" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="/Images/banner1.jpg" class="d-block w-100 " width="500px" height="500px" alt="Ảnh 1" />
                                </div>
                                <div class="carousel-item">
                                    <img src="/Images/banner2.png" class="d-block w-100" width="500px" height="500px" alt="Ảnh 2" />
                                </div>
                                <div class="carousel-item">
                                    <img src="/Images/banner3.jpg" class="d-block w-100 " width="500px" height="500px" alt="Ảnh 3" />
                                </div>
                                <div class="carousel-item">
                                    <img src="/Images/banner4.jpg" class="d-block w-100 " width="500px" height="500px" alt="Ảnh 3" />
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div style="text-align: center">
                    <br />
                    @RenderBody()
                    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
                    <df-messenger intent="WELCOME"
                                  chat-title="FCB LAPTOP"
                                  agent-id="a492b26a-c295-4869-a71f-eebf837ca42d"
                                  language-code="vi">
                    </df-messenger>
                </div>
            </div>
        </div>

        <!--Footer-->
    </div>
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
