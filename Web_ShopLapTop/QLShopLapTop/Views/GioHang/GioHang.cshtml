@using QLShopLapTop.Models;
@model  List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserView.cshtml";
    
}

<div class="container" style="background-color: aliceblue">
    <div class="card border-dark">
        <table class="table" style="margin-bottom: 0.1rem">
            <tr style="background-color:lightyellow">
                <th>MÃ SẢN PHẨM</th>
                <th>TÊN SẢN PHẨM</th>
                <th>ẢNH BÌA</th>
                <th>ĐƠN GIÁ</th>
                <th>SỐ LƯỢNG</th>
                <th>THÀNH TIỀN</th>
                <th>
                    @Html.ActionLink("DELETE ALL", "XoaGioHang_All", "GioHang")
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="12%">@item.pMaSP</td>
                    <td width="26%">@item.pTenSP</td>
                    <td width="22%"><img src="~/Images/@item.pHinhAnh" width=50%></td>
                    <td width="12%">@String.Format("{0:0'0}", item.pDonGia)</td>
                    <td width="12%">@item.pSoLuong</td>
                    <td width="12%">@String.Format("{0:0'0}", item.ThanhTien)</td>
                    <td><a href="@Url.Action("ChiTietSanPham", "SanPham", new {@MaSP = item.pMaSP })">Details</a></td>
                    <td><a href="@Url.Action("XoaGioHang", "GioHang", new {@MaSP = item.pMaSP })">Deletes</a></td>
                </tr>
            }
            <tr style="background-color:lightyellow">
                <td colspan="3" style="color:blue; font-weight:bold; text-align:right;">Tổng cộng</td>
                <td style="color:red; font-weight:bold;">@ViewBag.TongSoLuong</td>
                <td style="color: red; font-weight: bold;">@String.Format("{0:0'0}", ViewBag.TongThanhTien) VND </td>
                <td colspan="3">
                    <a href="@Url.Action("CheckOut","GioHang")">
                        <input type="submit" value="ĐẶT HÀNG" class="btn btn-primary" />
                    </a>
                    <a href="@Url.Action("ShowSanPham","SanPham")">
                        <input type="submit" value="MUA TIẾP" class="btn btn-primary" />
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>
